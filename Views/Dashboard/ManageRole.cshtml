@model List<RolesToReturnViewModel>
@{
}

<h2>All Roles</h2>

<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@if (Model == null || !Model.Any())
		{

			<div>No record added yet</div>
		}
		else
		{
			@foreach (var role in Model)
			{
				<tr>
					<td>@role.Id</td>
						<td>@role.Name</td>
						<td>
							<a asp-action="" asp-controller="">View  |</a>
							<a asp-action="" asp-controller="">Edit  |</a>
							<a asp-action="" asp-controller="">Delete</a>
						</td>
					</tr>
				}
			}

	</tbody>
</table>